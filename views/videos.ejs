<!DOCTYPE html>
<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container">
<a href="/home" class="btn btn-secondary mb-3">â¬… Back to Home</a>

<form method="get" action="/videos/search">
<input class="form-control mb-2" name="q" placeholder="Search YouTube">
<button class="btn btn-primary">Search</button>
</form>

<hr>

<% if (results) { results.forEach(v => { %>
<div>
<img src="<%= v.snippet.thumbnails.default.url %>">
<%= v.snippet.title %>
<form method="post" action="/videos/add">
<input type="hidden" name="video_id" value="<%= v.id.videoId %>">
<input type="hidden" name="title" value="<%= v.snippet.title %>">
<input type="hidden" name="thumbnail" value="<%= v.snippet.thumbnails.default.url %>">
<button class="btn btn-sm btn-success">Save</button>
</form>
</div>
<% }) } %>

<hr>

<h3>Favorites</h3>
<% favorites.forEach(f => { %>
<div>
<img src="<%= f.thumbnail %>">
<%= f.title %>
<a class="btn btn-sm btn-danger" href="/videos/delete/<%= f.id %>">Delete</a>
</div>
<% }) %>

</body>
</html>
